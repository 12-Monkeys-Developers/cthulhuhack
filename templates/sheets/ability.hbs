{{!log "Cthulhu Hack | ability" this}}
<section class="ability-section">

  <div class="item-header">
      <input name="name" type="text" value="{{item.name}}"{{#if isPlay}} disabled{{/if}} />
      <div class="item-header-row">
          <div class="item-image">
              {{#if isEdit}}
                  <img class="editable-image" data-action="editImage" data-uuid="{{item.uuid}}" src="{{item.img}}" data-edit="img" data-tooltip="{{localize 'TOOLTIPS.SelectImage'}}" />
              {{else}}
                  {{#unless hasDefaultImage}}
                      <img src="{{item.img}}" />
                  {{/unless}}                        
              {{/if}}
          </div>
      </div>
  </div>

  <div class="item-properties grid-3">
    {{formGroup systemFields.key value=systemSource.key name="system.key" localize=true disabled=isPlay}}  
    {{formGroup systemFields.uses.fields.per value=systemSource.uses.per name="system.uses.per" localize=true disabled=isPlay}}  
    {{formGroup systemFields.multiple value=systemSource.multiple name="system.multiple" localize=true disabled=isPlay}}
    {{formGroup systemFields.uses.fields.max value=systemSource.uses.max name="system.uses.max" localize=true disabled=isPlay}}
    {{formGroup systemFields.uses.fields.value value=systemSource.uses.value name="system.uses.value" localize=true disabled=isPlay}}         
    {{formGroup systemFields.uses.fields.last value=systemSource.uses.last name="system.uses.last" localize=true disabled=isPlay}}
    {{formGroup systemFields.isCustom value=systemSource.isCustom localize=true disabled=isPlay}}  
    {{formGroup systemFields.advantageGiven value=systemSource.advantageGiven name="system.advantageGiven" localize=true disabled=isPlay}}  
    {{formGroup systemFields.advantageText value=systemSource.advantageText name="system.advantageText" localize=true disabled=isPlay}}
  </div>

  <div class="item-description">
    {{#if isEdit}}
      <fieldset>
        <legend>{{localize "CTHACK.Description"}}</legend>
        <div class="description-content">
          {{formInput systemFields.description enriched=enrichedDescription value=system.description name="system.description" toggled=true}}
        </div>
      </fieldset>
    {{else}}
      {{#if system.hasDescription}}
        <fieldset>
          <legend>{{localize "CTHACK.Description"}}</legend>
          <div class="description-content">
            {{formInput systemFields.description enriched=enrichedDescription value=system.description name="system.description" toggled=true}}
          </div>
        </fieldset>
      {{/if}}
    {{/if}}
  </div>
</section>