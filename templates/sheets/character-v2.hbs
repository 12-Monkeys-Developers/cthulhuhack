{{!log 'actor-sheet' this}}
<form class="{{cssClass}} flexrow" autocomplete="off">
{{log "character" this}}
  {{> "systems/cthack/templates/sheets/parts/character-sidebar.hbs"}}
  <div class="main">
    <header class="character-sheet-header">
      <div class="name" data-name="{{actor.name}}">
        {{#if editable}}
          <input name="name" type="text" value="{{actor.name}}" />
        {{else}}
          <div data-tooltip="Clic droit pour rechercher le nom">{{actor.name}}</div>
        {{/if}}
      </div>
      <div class="header-occupation"> 
        <div class="occupation-archetype">
          {{#if system.hasOccupation}}{{system.occupation}}{{/if}}{{#if system.hasArchetype}} (Archetype {{system.archetype}}){{/if}}
        </div>
        <div class="sheet-lock">
          {{#if editable}}
            <i class="fas fa-lock-open" data-tooltip="{{localize 'TOOLTIPS.LockSheet'}}"></i>
          {{else}}
            <i class="fas fa-lock" data-tooltip="{{localize 'TOOLTIPS.UnlockSheet'}}"></i>
          {{/if}}
        </div>
      </div>
      
      {{#unless editable}}
          <div class="short-description">
            {{system.shortDescription}}
          </div>
      {{/unless}}

      {{#if editable}}
        <div class="occupation">
          <label>{{localize "CTHACK.Occupation"}}</label>
          {{#if editable}}
            <input name="system.occupation" type="text" value="{{system.occupation}}" class="occupation-input"/>
          {{else}}
            {{system.occupation}}
          {{/if}}
        </div>
        <div class="archetype">
          <label>{{localize "CTHACK.Archetype"}}</label>
          {{#if editable}}
            <input name="system.archetype" type="text" value="{{system.archetype}}" class="occupation-input"/>
          {{else}}
            {{system.archetype}}
          {{/if}}                
        </div>
        <input class="short-description-editable" name="system.shortDescription" type="text" value="{{system.shortDescription}}"/>
      {{/if}}
      <div class="resources {{getNbRessources}}">
        <div class="resource">
            <label class="resource-label resource-name {{#if (isDiceRollable system.attributes.flashlights.value)}}rollable{{/if}}" data-resource="flashlights" data-tooltip="{{localize 'CTHACK.FlashLightsDesc'}}" data-tooltip-direction="UP">{{localize "CTHACK.FlashLights"}}</label>
            <div class="resource-content">
                <select name="system.attributes.flashlights.value" data-type="String" {{{getStyleForDice system.attributes.flashlights.value}}} {{disabled uneditable}}>
                  {{selectOptions dicesValue selected=system.attributes.flashlights.value}}                  
                </select>
                (
                <select name="system.attributes.flashlights.max" data-type="String" {{{getStyleForDice system.attributes.flashlights.max}}} {{disabled uneditable}}>
                  {{selectOptions dicesMax selected=system.attributes.flashlights.max}}
                </select>
               )
            </div>
        </div>                  
        <div class="resource">
            <label class="resource-label resource-name {{#if (isDiceRollable system.attributes.smokes.value)}}rollable{{/if}}" data-resource="smokes" data-tooltip="{{localize 'CTHACK.SmokesDesc'}}" data-tooltip-direction="UP">{{localize "CTHACK.Smokes"}}</label>
            <div class="resource-content">
                <select name="system.attributes.smokes.value" data-type="String" {{{getStyleForDice system.attributes.smokes.value}}} {{disabled uneditable}}>
                {{#select system.attributes.smokes.value}}
                    {{>"systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
                {{/select}}
                </select>
                (
                <select name="system.attributes.smokes.max" data-type="String" {{{getStyleForDice system.attributes.smokes.max}}} {{disabled uneditable}}>
                {{#select system.attributes.smokes.max}}
                    {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                {{/select}}
                </select>
                )
            </div>
        </div>
        <div class="resource">
            <label class="resource-label resource-name {{#if (isDiceRollable system.attributes.sanity.value)}}rollable{{/if}}" data-resource="sanity" data-tooltip="{{localize 'CTHACK.SanityDesc'}}" data-tooltip-direction="UP">{{localize "CTHACK.Sanity"}}</label>
            <div class="resource-content">
                <select name="system.attributes.sanity.value" data-type="String" {{{getStyleForDice system.attributes.sanity.value}}} {{disabled uneditable}}>
                {{#select system.attributes.sanity.value}}
                    {{>"systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
                {{/select}}
                </select>
                (
                <select name="system.attributes.sanity.max" data-type="String" {{{getStyleForDice system.attributes.sanity.max}}} {{disabled uneditable}}>
                {{#select system.attributes.sanity.max}}
                    {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                {{/select}}
                </select>
                )
            </div>
        </div>
        
        {{#if (isEnabled "Wealth")}}  
          <div class="resource">
              <label for="wealthDice.value" class="resource-label wealth-name {{#if (isWealthAsResource)}}rollable{{/if}}" data-resource="wealthDice">{{localize "CTHACK.Wealth"}}</label>
              <div class="resource-content">
                  <select name="system.attributes.wealthDice.value" data-type="String" {{{getStyleForDice system.attributes.wealthDice.value}}} {{disabled uneditable}}>
                      {{#select system.attributes.wealthDice.value}}
                          {{>"systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
                      {{/select}}
                  </select>
                  {{#if (isWealthAsResource)}}
                      (
                      <select name="system.attributes.wealthDice.max" data-type="String" {{{getStyleForDice system.attributes.wealthDice.max}}} {{disabled uneditable}}>
                          {{#select system.attributes.wealthDice.max}}
                              {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                          {{/select}}
                      </select>
                      )
                  {{/if}}
              </div>
          </div>
        {{/if}}

        {{#if (isEnabled "MiscellaneousResource")}}    
            <div class="resource">
                <label for="miscellaneous.value" class="resource-label miscellaneous-name {{#if (isDiceRollable system.attributes.miscellaneous.value)}}rollable{{/if}}"  data-resource="miscellaneous">{{getMiscellaneousValue}}</label>
                <div class="resource-content">
                    <select name="system.attributes.miscellaneous.value" data-type="String" {{{getStyleForDice system.attributes.miscellaneous.value}}} {{disabled uneditable}}>
                        {{#select system.attributes.miscellaneous.value}}
                            {{>"systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
                        {{/select}}
                    </select>
                    (
                    <select name="system.attributes.miscellaneous.max" data-type="String" {{{getStyleForDice system.attributes.miscellaneous.max}}} {{disabled uneditable}}>
                        {{#select system.attributes.miscellaneous.max}}
                            {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                        {{/select}}
                    </select>
                    )
                </div>
            </div>
        {{/if}}

      </div>
      <div class="fight">
        <div class="resource">
              <label class="resource-label">{{localize "CTHACK.HitPoints"}}</label>
              <div class="resource-content flexrow flex-center hitpoints">
                  <input class="hitpoints-value" type="text" class="value" name="system.hp.value" value="{{system.hp.value}}" data-dtype="Number"/>
                  /
                  <input class="hitpoints-max" type="text" class="max" name="system.hp.max" value="{{system.hp.max}}" data-dtype="Number" {{disabled uneditable}}/>
              </div>
        </div>

        <div class="resource">
              <label for="hitDice.value" class="resource-label hit-name {{#if (isEnabled "HitDiceResource")}}rollable{{/if}}" data-resource="hitDice">{{localize "CTHACK.HitDice"}}</label>
              <div class="resource-content">
                  <select name="system.attributes.hitDice.value" data-type="String" {{{getStyleForDice system.attributes.hitDice.value}}} {{disabled uneditable}}>
                      {{#select system.attributes.hitDice.value}}
                          {{>"systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
                      {{/select}}
                  </select>
                  <span>/</span>
                  <select name="system.attributes.hitDice.max" data-type="String" {{{getStyleForDice system.attributes.hitDice.max}}} {{disabled uneditable}}>
                      {{#select system.attributes.hitDice.max}}
                          {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                      {{/select}}
                  </select>
              </div>
        </div>

        <div class="resource">
            <label for="armedDamage.value" class="resource-label armed-damage-name rollable" data-resource="armedDamage">{{localize "CTHACK.ArmedDamage"}}</label>
            <div class="resource-content">
                <select name="system.attributes.armedDamage.value" data-type="String" {{{getStyleForDice system.attributes.armedDamage.value}}} {{disabled uneditable}}>
                {{#select system.attributes.armedDamage.value}}
                    {{>"systems/cthack/templates/parts/dice-sides-options-damage.hbs"}}
                {{/select}}
                </select>
            </div>
        </div>

        <div class="resource">
            <label for="unarmedDamage.value" class="resource-label unarmed-damage-name rollable" data-resource="unarmedDamage">{{localize "CTHACK.UnarmedDamage"}}</label>
            <div class="resource-content">
                <select name="system.attributes.unarmedDamage.value" data-type="String" {{{getStyleForDice system.attributes.unarmedDamage.value}}} {{disabled uneditable}}>
                {{#select system.attributes.unarmedDamage.value}}
                    {{>"systems/cthack/templates/parts/dice-sides-options-damage.hbs"}}
                {{/select}}
                </select>
            </div>
        </div>

      </div>
    </header>
           {{!-- Sheet Tab Navigation --}}
          <nav class="sheet-tabs tabs" data-group="primary">
              <a class="choice" data-tab="description">{{localize "CTHACK.Description"}}</a>        
              <a class="choice" data-tab="items">{{localize "CTHACK.Items"}}</a>
              <a class="choice" data-tab="abilities">{{localize "CTHACK.AbilitiesAndMagic"}}</a>
              <a class="choice" data-tab="notes">{{localize "CTHACK.Notes"}}</a>
          </nav>
    <section class="sheet-body">
            {{!-- Biography Tab --}}
            <div class="tab biography" data-group="primary" data-tab="description">
                {{editor enrichedBiography target="system.biography" button=true owner=owner editable=editable}}
            </div>
            
            {{!-- Owned Items Tab --}}
            <div class="tab items" data-group="primary" data-tab="items">
                <ol class="items-list">
                    <li class="item-header flexrow" draggable="true">
                      <div class="item-header-name">{{localize "CTHACK.Name"}}</div>
                      <div>{{localize "CTHACK.ItemDiceName"}}</div>
                      <div>{{localize "CTHACK.ItemRangeName"}}</div>
                      <div class="item-controls-header">
                        <a class="item-control item-create" data-tooltip="{{localize "CTHACK.AddItemOrWeapon"}}" data-type="item" data-alt-type="weapon"><i class="fas fa-plus"></i></a>
                      </div>
                    </li>
                    {{#each weapons as |item id|}}
                      {{> "systems/cthack/templates/actor/parts/actor-item.hbs" item}}
                    {{/each}}
                    {{#each otheritems as |item id|}}
                      {{> "systems/cthack/templates/actor/parts/actor-item.hbs" item}}
                    {{/each}}            
                </ol>
            </div>

            {{!-- Abilities and Magics Tab --}}
            <div class="tab abilities" data-group="primary" data-tab="abilities">
              {{!-- Abilities--}}
              <div class="entete-tableau">
                  <div class="entete-titre">{{localize "CTHACK.Abilities"}}</div>
                  <div class="item-controls-header">
                    <a class="item-control ability-create" data-tooltip="{{localize "CTHACK.AddAbility"}}" data-type="ability"><i class="fas fa-plus"></i></a>
                  </div>
              </div>
              
              {{#if (gt abilities.length 0)}}            
                <div class="grid-abilities">
                    <div class="entete">{{localize "CTHACK.Name"}}</div>
                    <div class="entete">{{localize "CTHACK.AbilityUsePer"}}</div>
                    <div class="entete">{{localize "CTHACK.AbilityUseValue"}}</div>
                    <div class="entete">{{localize "CTHACK.AbilityUseLast"}}</div>
                    <div class="entete">{{localize "CTHACK.AbilityMultiple"}}</div>
                    <div></div>
                    {{#each abilities as |ability id|}}
                          {{> "systems/cthack/templates/actor/parts/actor-ability.hbs" ability}}
                    {{/each}}      
                </div>
              {{/if}}

              {{!-- Magic --}}
              <div class="entete-tableau">
                    <div class="entete-titre">{{localize "CTHACK.Magic"}}</div>
                    <div class="item-controls-header">
                        <a class="item-control item-create" data-tooltip="{{localize "CTHACK.AddMagic"}}" data-type="magic"><i class="fas fa-plus"></i></a>
                    </div>
              </div>

              {{#if (gt magics.length 0)}}   
              <div class="grid-magics">
                    <div class="entete">{{localize "CTHACK.Name"}}</div>
                    <div class="entete">{{localize "CTHACK.MagicType"}}</div>
                    <div class="entete">{{localize "CTHACK.MagicSanity"}}</div>
                    <div class="entete">{{localize "CTHACK.MagicIncantation"}}</div>
                    <div></div>
                    {{#each magics as |item id|}}
                        {{> "systems/cthack/templates/actor/parts/actor-magic.hbs" item}}
                    {{/each}}       
                </div>
              {{/if}}

            </div>  

            {{!-- Notes Tab --}}
            <div class="tab character-notes" data-group="primary" data-tab="notes">
                {{editor enrichedNotes target="system.notes" button=true owner=owner editable=editable}}
            </div>  
    </section>
  </div>
</form>

