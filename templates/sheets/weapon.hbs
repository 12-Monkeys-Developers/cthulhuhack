<form class="{{cssClass}}" autocomplete="off">
    {{!log "weapon" this}}
        <div class="item-header">
            {{#if editable}}
                <img class="editable-image" src="{{item.img}}" data-edit="img" data-tooltip="{{localize 'TOOLTIPS.SelectImage'}}" />
            {{else}}
                <img src="{{item.img}}" />
            {{/if}}
            {{#if editable}}
                <input name="name" type="text" value="{{item.name}}" />
            {{else}}
                <div class="name">{{item.name}}</div>
            {{/if}}
        </div>
        <div class="weapon-body">
            <div class="weapon-grid">
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.Material"}}</div>
                    {{#if editable}}
                        <select class="select-dice-material" name="system.dice">
                            {{selectOptions diceValues selected=system.dice blank="CTHACK.None" localize=true}}
                        </select>
                    {{else}}
                        <img src="{{ concat 'systems/cthack/ui/dice/' system.dice '.webp'}}"/>
                    {{/if}}
                </div>
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.ItemRangeName"}}</div>
                    <select class="select-range" name="system.range" data-type="String">
                        {{selectOptions rangeValues selected=system.range labelAttr="label" localize=true blank="CTHACK.None"}}
                    </select>
                </div>
            </div>
            <div class="item-description">
                {{#if editable}}
                    <div class="field-name description">{{localize "CTHACK.Description"}}</div>
                {{else}}
                    {{#if hasDescription}}
                        <div class="field-name description">{{localize "CTHACK.Description"}}</div>
                    {{/if}}
                {{/if}}                
                <div class="description-content">
                    {{editor enrichedDescription target="system.description" button=true engine="prosemirror"
                    owner=owner editable=editable}}
                </div>
            </div>
        </div>
</form>
