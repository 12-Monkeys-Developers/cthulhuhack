<form class="{{cssClass}}" autocomplete="off">
    {{log 'archetype' this}}
    <div class="item-header">
        {{#if editable}}
        <input name="name" type="text" value="{{item.name}}" />
        {{else}}
        <div class="name">{{item.name}}</div>
        {{/if}}
        <div class="sheet-lock">
        {{#if editable}}
            <i class="fas fa-lock-open" data-tooltip="Verrouiller la fiche"></i>
        {{else}}
            <i class="fas fa-lock" data-tooltip="Déverrouiller la fiche"></i>
        {{/if}}
        </div>
    </div>

    <div class="archetype-body">
        <div class="archetype-body-header">
            {{#if editable}}
                <img src="{{item.img}}" data-edit="img" data-tooltip="Clic gauche pour sélectionner une image" />
            {{else}}
                <img src="{{item.img}}" />
            {{/if}}
            <div class="archetype-body-header-right">
                <div class="item-description">
                    {{#if editable}}
                        <div class="field-name description">{{localize "CTHACK.Description"}}</div>
                    {{else}}
                        {{#if hasDescription}}
                        <div class="field-name description">{{localize "CTHACK.Description"}}</div>
                        {{/if}}
                    {{/if}}
                </div>
                <div class="description-content">
                    {{editor enrichedDescription target="system.description" button=true engine="prosemirror" owner=owner editable=editable}}
                </div>                
            </div>
        </div>
        <div class="archetype-grid">
            <div class="data-group">
                    <div class="field-name" data-tooltip='{{localize "CTHACK.FlashLightsDesc"}}'>{{localize "CTHACK.FlashLights"}}</div>
                    <select name="system.flashlights" data-type="String">
                    {{#select item.system.flashlights}}
                        {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                    {{/select}}
                    </select>
                </div>            
                <div class="data-group">
                    <div class="field-name" data-tooltip='{{localize "CTHACK.SmokesDesc"}}'>{{localize "CTHACK.Smokes"}}</div>
                    <select name="system.smokes" data-type="String">
                    {{#select item.system.smokes}}
                        {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                    {{/select}}
                    </select>
                </div>
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.Sanity"}}</div>
                    <select name="system.sanity" data-type="String">
                    {{#select item.system.sanity}}
                        {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                    {{/select}}
                    </select>
                </div>
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.HitPointsStart"}}</div>
                    <input class="field-value input-small" type="text" name="system.hitpoints" data-type="String" value="{{item.system.hitpoints}}"> 
                </div>
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.HitDice"}}</div>
                    <select name="system.hitdice" data-type="String">
                    {{#select item.system.hitdice}}
                        {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                    {{/select}}
                    </select>
                </div>
                  <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.ArmedDamage"}}</div>
                    <select name="system.armeddamage" data-type="String">
                    {{#select item.system.armeddamage}}
                        {{>"systems/cthack/templates/parts/dice-sides-options-damage.hbs"}}
                    {{/select}}
                    </select>
                </div>
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.WealthStart"}}</div>
                    <select class="select-large" name="system.wealthStart" data-type="String">
                    {{#select item.system.wealthStart}}
                        <option value="2">CHA*2</option>
                        <option value="3">CHA*3</option>
                        <option value="4">CHA*4</option>
                        <option value="sp">{{localize "CTHACK.WealthStartSpecial"}}</option>
                    {{/select}}
                    </select>
                </div>            
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.Wealth"}}</div>
                    <select name="system.wealthDice" data-type="String">
                    {{#select item.system.wealthDice}}
                        {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                    {{/select}}
                    </select>
                </div>
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.UnarmedDamage"}}</div>
                    <select name="system.unarmeddamage" data-type="String">
                    {{#select item.system.unarmeddamage}}
                        {{>"systems/cthack/templates/parts/dice-sides-options-damage.hbs"}}
                    {{/select}}
                    </select>
                </div>
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.PrimarySave"}}</div>
                    <select class="select-large" name="system.primarysave" data-type="String">
                    {{#select item.system.primarysave}}
                        <option value="str">{{localize "CTHACK.SaveStr"}}</option>    
                        <option value="dex">{{localize "CTHACK.SaveDex"}}</option>
                        <option value="con">{{localize "CTHACK.SaveCon"}}</option>
                        <option value="int">{{localize "CTHACK.SaveInt"}}</option>
                        <option value="wis">{{localize "CTHACK.SaveWis"}}</option>
                        <option value="cha">{{localize "CTHACK.SaveCha"}}</option>
                    {{/select}}
                    </select>
                </div>
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.SecondarySave1"}}</div>
                    <select class="select-large" name="system.secondarysave1" data-type="String">
                    {{#select item.system.secondarysave1}}
                        <option value="str">{{localize "CTHACK.SaveStr"}}</option>    
                        <option value="dex">{{localize "CTHACK.SaveDex"}}</option>
                        <option value="con">{{localize "CTHACK.SaveCon"}}</option>
                        <option value="int">{{localize "CTHACK.SaveInt"}}</option>
                        <option value="wis">{{localize "CTHACK.SaveWis"}}</option>
                        <option value="cha">{{localize "CTHACK.SaveCha"}}</option>
                    {{/select}}
                    </select>
                </div>
                <div class="data-group">
                    <div class="field-name">{{localize "CTHACK.SecondarySave2"}}</div>
                    <select class="select-large" name="system.secondarysave2" data-type="String">
                    {{#select item.system.secondarysave2}}
                        <option value="str">{{localize "CTHACK.SaveStr"}}</option>    
                        <option value="dex">{{localize "CTHACK.SaveDex"}}</option>
                        <option value="con">{{localize "CTHACK.SaveCon"}}</option>
                        <option value="int">{{localize "CTHACK.SaveInt"}}</option>
                        <option value="wis">{{localize "CTHACK.SaveWis"}}</option>
                        <option value="cha">{{localize "CTHACK.SaveCha"}}</option>
                    {{/select}}
                    </select>
                </div>  
        </div>
    </div>

</form>
