<section>
  {{log "archetype" this}}
  <div class="archetype-body">
    <div class="archetype-body-header">
      {{#if editable}}
        <img class="editable-image" data-action="editImage" data-uuid="{{item.uuid}}" src="{{item.img}}" data-edit="img" data-tooltip="{{localize 'TOOLTIPS.SelectImage'}}" />
      {{else}}
        <img src="{{item.img}}" />
      {{/if}}
      <div class="archetype-body-header-right">
        <div class="item-description">
          {{#if editable}}
            <div class="field-name description">{{localize "CTHACK.Description"}}</div>
          {{else}}
            {{#if hasDescription}}
              <div class="field-name description">{{localize "CTHACK.Description"}}</div>
            {{/if}}
          {{/if}}
          <div class="description-content">
            {{editor enrichedDescription target="system.description" button=true engine="prosemirror" owner=owner editable=editable}}
          </div>
        </div>
      </div>
    </div>
    <div class="archetype-grid">
      <div class="data-group">
        <div class="field-name" data-tooltip="{{localize 'CTHACK.FlashLightsDesc'}}">{{localize "CTHACK.FlashLights"}}</div>
        <select class="select-dice" name="system.flashlights" data-type="String" {{getStyleForDice system.flashlights}}>
          {{selectOptions diceMaxValues selected=system.flashlights}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name" data-tooltip="{{localize 'CTHACK.SmokesDesc'}}">{{localize "CTHACK.Smokes"}}</div>
        <select class="select-dice" name="system.smokes" data-type="String" {{getStyleForDice system.smokes}}>
          {{selectOptions diceMaxValues selected=system.smokes}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.Sanity"}}</div>
        <select class="select-dice" name="system.sanity" data-type="String" {{getStyleForDice system.sanity}}>
          {{selectOptions diceMaxValues selected=system.sanity}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.HitPointsStart"}}</div>
        <input class="field-value input-small" type="text" name="system.hitpoints" data-type="String" value="{{item.system.hitpoints}}" />
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.HitDice"}}</div>
        <select class="select-dice" name="system.hitdice" data-type="String" {{getStyleForDice system.hitdice}}>
          {{selectOptions diceMaxValues selected=system.hitdice}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.ArmedDamage"}}</div>
        <select class="select-dice" name="system.armeddamage" data-type="String" {{getStyleForDice system.armeddamage}}>
          {{selectOptions diceDamageValues selected=system.armeddamage}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.WealthStart"}}</div>
        <select class="wealth-start" class="select-large" name="system.wealthStart" data-type="String">
          {{selectOptions wealthStart selected=system.wealthStart localize=true}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.Wealth"}}</div>
        <select class="select-dice" name="system.wealthDice" data-type="String" {{getStyleForDice system.wealthDice}}>
          {{selectOptions diceMaxValues selected=system.wealthDice}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.UnarmedDamage"}}</div>
        <select class="select-dice" name="system.unarmeddamage" data-type="String" {{getStyleForDice system.unarmeddamage}}>
          {{selectOptions diceDamageValues selected=system.unarmeddamage}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.PrimarySave"}}</div>
        <select class="select-large" name="system.primarysave" data-type="String">
          {{selectOptions saves selected=system.primarysave labelAttr="label" localize=true}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.SecondarySave1"}}</div>
        <select class="select-large" name="system.secondarysave1" data-type="String">
          {{selectOptions saves selected=system.secondarysave1 labelAttr="label" localize=true}}
        </select>
      </div>
      <div class="data-group">
        <div class="field-name">{{localize "CTHACK.SecondarySave2"}}</div>
        <select class="select-large" name="system.secondarysave2" data-type="String">
          {{selectOptions saves selected=system.secondarysave2 labelAttr="label" localize=true}}
        </select>
      </div>
    </div>
  </div>
</section>