<div class="cthack chat-save-roll">
    <h4 class="chat-save-roll-title">{{ localize "CHAT.RollSave" save=rollId}}</h4>
    <div >
    {{#if advantageFromDialog}}<span>{{localize "CHAT.RollWithAdvantageFromDialog"}}<br></span>{{/if}}{{#if disadvantageFromDialog}}<span>{{localize "CHAT.RollWithDisadvantageFromDialog"}}<br></span>{{/if}}{{#if doubleAdvantageFromDialog}}<span>{{localize "CHAT.RollWithDoubleAdvantageFromDialog"}}<br></span>{{/if}}{{#if doubleDisadvantageFromDialog}}<span>{{localize "CHAT.RollWithDoubleDisadvantageFromDialog"}}<br></span>{{/if}}
    {{#if advantage}}<span>{{localize "CHAT.RollWithAdvantage"}}<br></span>{{/if}}{{#if disadvantage}}<span>{{localize "CHAT.RollWithDisadvantage"}}<br></span>{{/if}}
    <span>
        {{#if (isModifierPositive modifier)}}{{ localize "CHAT.RollWithBonus" modifier=modifier }}<br>{{/if}}
        {{#if (isModifierNegative modifier)}}{{ localize "CHAT.RollWithMalus" modifier=modifier }}<br>{{/if}}        
    </span>    
    <span>{{#if (hasModifier modifier)}}{{localize "CHAT.RollDifficulty" difficulty=realTargetValue}}{{else}}{{localize "CHAT.RollDifficulty" difficulty=targetValue}}{{/if}}</span>
    <span><br><br>{{#if isSuccess}}{{ localize "CHAT.RollSuccess" }}{{else}}{{ localize "CHAT.RollFailure" }}{{/if}}</span>
    </div>
</div>
<div class="dice-roll chat-save-roll-result">
        <div class="dice-result">
            <h4 class="dice-total">{{total}}</h4>
            {{> "systems/cthack/templates/chat/tooltip.hbs"}}
        </div>
</div>
