<li class="item flexrow" data-item-id="{{_id}}">
    <div class="item-bloc flexrow">
        <div class="item-image"><img src="{{img}}" title="{{name}}"/></div>
        <h4 class="item-name">{{name}}</h4>
    </div>
    <div class="item-align-middle padding-top-10">{{abilityPeriodToString data.uses.per}}</div>
    <div class="item-align-middle padding-top-10">
        {{#if (gt data.uses.max 0)}}
            {{data.uses.value}}/{{data.uses.max}}
        {{/if}}
    </div>
    <div class="item-align-middle padding-top-10">{{data.uses.last}}</div>
    <div class="item-align-middle padding-top-10">{{booleanToString data.multiple}}</div>
    <div class="item-controls">
        {{#if (gt data.uses.value 0) }}
            <a class="item-control ability-use" title="{{localize "CTHACK.Use"}}"><i class="fas fa-check"></i></a>
        {{else}}
            {{#if (gt data.uses.max 0)}}
                <a class="item-control ability-reset" title="{{localize "CTHACK.Reset"}}"><i class="fas fa-times"></i></a>
            {{/if}}
        {{/if}}
        <a class="item-control ability-edit" title="{{localize "CTHACK.Edit"}}"><i class="fas fa-edit"></i></a>
        <a class="item-control ability-delete" title="{{localize "CTHACK.Delete"}}"><i class="fas fa-trash"></i></a>
    </div>
</li>