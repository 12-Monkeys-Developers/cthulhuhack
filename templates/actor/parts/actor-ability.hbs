<div class="item-bloc item" data-item-id="{{_id}}">
  <div class="item-image"><img src="{{img}}" data-tooltip="{{name}}" /></div>
  <div class="item-name">{{name}}</div>
</div>
<div class="item-element-text">{{abilityPeriodToString system.uses.per}}</div>
<div class="item-element-text">
  {{#if (gt system.uses.max 0)}}
    {{system.uses.value}}/{{system.uses.max}}
  {{/if}}
</div>
<div class="item-element-text">{{system.uses.last}}</div>
<div class="item-element-text">{{booleanToString system.multiple}}</div>
<div class="item-controls item" data-item-id="{{_id}}">
  {{#if (gt system.uses.value 0)}}
    <a class="item-control ability-use" data-tooltip="{{localize 'CTHACK.Use'}}"><i class="fas fa-check"></i></a>
  {{else}}
    {{#if (gt system.uses.max 0)}}
      <a class="item-control ability-reset" data-tooltip="{{localize 'CTHACK.Reset'}}"><i class="fas fa-times"></i></a>
    {{/if}}
  {{/if}}
  <a class="item-control ability-edit" data-tooltip="{{localize 'CTHACK.Edit'}}"><i class="fas fa-edit"></i></a>
  <a class="item-control ability-delete" data-tooltip="{{localize 'CTHACK.Delete'}}"><i class="fas fa-trash"></i></a>
</div>