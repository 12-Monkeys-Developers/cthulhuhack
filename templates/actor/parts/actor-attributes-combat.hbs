<div class="resource flex-group-center">
    {{#if (isEnabled "HitDiceResource")}}
        <label for="hitDice.value" class="resource-label hit-name {{#if (isEnabled "HitDiceResource")}}rollable{{/if}}" data-resource="hitDice">{{localize "CTHACK.HitDice"}}</label>
        <div class="resource-content">
            <select name="system.attributes.hitDice.value" data-type="String" {{{getStyleForDice system.attributes.hitDice.value}}} >
                {{#select system.attributes.hitDice.value}}
                    {{>"systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
                {{/select}}
            </select>
            <span>/</span>
            <select name="system.attributes.hitDice.max" data-type="String" {{{getStyleForDice system.attributes.hitDice.max}}} >
                {{#select system.attributes.hitDice.max}}
                    {{>"systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
                {{/select}}
            </select>
        </div>
    {{else}}
        <label class="resource-label">{{localize "CTHACK.HitPoints"}}</label>
        <div class="resource-content flexrow flex-center hitpoints">
            <input type="text" class="input-hitpoints hitpoints-frame" name="system.hp.value" value="{{system.hp.value}}" data-dtype="Number"/>
            &nbsp;/&nbsp;
            <input type="text" class="input-hitpoints hitpoints-frame" name="system.hp.max" value="{{system.hp.max}}" data-dtype="Number"/>
        </div>
    {{/if}}
</div>

