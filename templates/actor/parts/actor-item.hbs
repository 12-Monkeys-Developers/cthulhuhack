<li class="item flexrow" data-item-id="{{_id}}">
            <div class="item-name flexrow">
    <div class="item-image"><img src="{{img}}" title="{{name}}" width="24" height="24"/></div>
    <h4>{{name}}</h4>
    <div class="item-dice rollable align-center">
    {{#if (isItemWithDice item.data.dice)}}
    <i class="fas fa-dice-d20"></i>
    {{/if}}
    <select class="item-dice-select" name="{{_id}}" data-type="String">
    {{#select data.dice}}
        <option value="">{{localize "CTHACK.None"}}</option>
        <option value="d4">1d4</option>
        <option value="d6">1d6</option>
        <option value="d8">1d8</option>
        <option value="d10">1d10</option>
        <option value="d12">1d12</option>
    {{/select}}
    </select>
    </div>
    <div class="align-center">{{#if (equals type "weapon")}}
    {{localize (rangeDesc data.range)}}
    {{/if}}
    </div>                      
    <div class="item-controls">
        <a class="item-control item-edit" title="{{localize "CTHACK.Edit"}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize "CTHACK.Delete"}}"><i class="fas fa-trash"></i></a>
    </div>
</li>