<li class="item equipment flexrow" data-item-id="{{_id}}">
    <div class="item-bloc flexrow">
        <div class="item-image"><img src="{{img}}" title="{{name}}"/></div>
        <h4 class="item-name">{{name}}</h4>
    </div>
    <div class="item-dice align-center">
        {{#if (isDiceRollable data.dice)}} <i class="fas fa-dice-d20 rollable"></i> {{/if}}
        <select class="item-dice-select" name="{{_id}}" data-type="String" {{{getStyleForDice data.dice}}}>
            {{#select data.dice }}
                {{>Â "systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
            {{/select}}
        </select>
    </div>
    <div class="item-range align-center">{{#if (equals type "weapon")}}{{localize (rangeDesc data.range)}}{{/if}}</div>                      
    <div class="item-controls">
        <a class="item-control item-edit" title="{{localize "CTHACK.Edit"}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize "CTHACK.Delete"}}"><i class="fas fa-trash"></i></a>
    </div>
</li>