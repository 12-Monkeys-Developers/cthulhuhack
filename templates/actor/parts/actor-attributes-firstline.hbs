{{!-- "flex-group-center" is also defined in the _grid.scss file and it will add a small amount of padding, a border, and will center all of its child elements content and text. --}}
<div class="resource flex-group-center">
    <label for="data.flashlights.value" class="resource-label resource-name {{#if (isDiceRollable data.attributes.flashlights.value)}}rollable{{/if}}" title='{{localize "CTHACK.FlashLightsDesc"}}' data-resource="flashlights">{{localize "CTHACK.FlashLights"}}</label>
    <div class="resource-content">
        <select name="data.attributes.flashlights.value" data-type="String" {{{getStyleForDice actor.data.attributes.flashlights.value}}} >
        {{#select actor.data.attributes.flashlights.value}}
            {{> "systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
        {{/select}}
        </select>
        <span>/</span>
        <select name="data.attributes.flashlights.max" data-type="String" {{{getStyleForDice actor.data.attributes.flashlights.max}}} >
        {{#select actor.data.attributes.flashlights.max}}
            {{> "systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
        {{/select}}
        </select>
    </div>
</div>                  
