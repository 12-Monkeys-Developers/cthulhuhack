{{!-- "flex-group-center" is also defined in the _grid.scss file and it will add a small amount of padding, a border, and will center all of its child elements content and text. --}}
<div class="resource flex-group-center">
    <label class="resource-label resource-name {{#if (isDiceRollable systemData.attributes.flashlights.value)}}rollable{{/if}}" data-resource="flashlights">{{localize "CTHACK.FlashLights"}}<em>{{localize "CTHACK.FlashLightsDesc"}}</em></label>
    <div class="resource-content">
        <select name="data.attributes.flashlights.value" data-type="String" {{{getStyleForDice systemData.attributes.flashlights.value}}} >
        {{#select systemData.attributes.flashlights.value}}
            {{> "systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
        {{/select}}
        </select>
        <span>/</span>
        <select name="data.attributes.flashlights.max" data-type="String" {{{getStyleForDice systemData.attributes.flashlights.max}}} >
        {{#select systemData.attributes.flashlights.max}}
            {{> "systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
        {{/select}}
        </select>
    </div>
</div>                  
