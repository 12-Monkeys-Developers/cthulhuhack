{{!-- "flex-group-center" is also defined in the _grid.scss file and it will add a small amount of padding, a border, and will center all of its child elements content and text. --}}
<div class="resource flex-group-center">
    <label for="data.flashlights.value" class="resource-label" title='{{localize "CTHACK.FlashLightsDesc"}}'>{{localize "CTHACK.FlashLights"}}</label>
    <div class="resource-content flexrow flex-center flex-between">
        <select name="data.attributes.flashlights.value" data-type="String">
        {{#select actor.data.attributes.flashlights.value}}
            <option value="">{{localize "CTHACK.None"}}</option>
            <option value="1d4">1d4</option>
            <option value="1d6">1d6</option>
            <option value="1d8">1d8</option>
            <option value="1d10">1d10</option>
            <option value="1d12">1d12</option>
        {{/select}}
        </select>
        <span> / </span>
        <select name="data.attributes.flashlights.max" data-type="String">
        {{#select actor.data.attributes.flashlights.max}}
            <option value="">{{localize "CTHACK.None"}}</option>
            <option value="1d4">1d4</option>
            <option value="1d6">1d6</option>
            <option value="1d8">1d8</option>
            <option value="1d10">1d10</option>
            <option value="1d12">1d12</option>
        {{/select}}
        </select>
    </div>
</div>                  
