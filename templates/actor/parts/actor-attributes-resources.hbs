{{!-- "flex-group-center" is also defined in the _grid.scss file and it will add a small amount of padding, a border, and will center all of its child elements content and text. --}}
<div class="resource flex-group-center">
    <label class="resource-label resource-name {{#if (isDiceRollable system.attributes.flashlights.value)}}rollable{{/if}}" data-resource="flashlights" data-tooltip="{{localize 'CTHACK.FlashLightsDesc'}}" data-tooltip-direction="UP">{{localize "CTHACK.FlashLights"}}</label>
    <div class="resource-content">
        <select name="attributes.flashlights.value" data-type="String" {{{getStyleForDice system.attributes.flashlights.value}}} >
        {{#select system.attributes.flashlights.value}}
            {{> "systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
        {{/select}}
        </select>
        <span>/</span>
        <select name="attributes.flashlights.max" data-type="String" {{{getStyleForDice system.attributes.flashlights.max}}} >
        {{#select system.attributes.flashlights.max}}
            {{> "systems/cthack/templates/parts/dice-sides-options-max.hbs"}}
        {{/select}}
        </select>
    </div>
</div>                  
