<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="item-image" src="{{data.img}}" data-edit="img" title="{{data.name}}"/>
        <div class="header-fields">
            <h1 class="item-name"><input name="name" type="text" value="{{data.name}}" placeholder="Name"/></h1>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">{{localize "CTHACK.Description"}}</a>
        <a class="item" data-tab="attributes">{{localize "CTHACK.Attributes"}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body item-ability">

        {{!-- Description Tab --}}
        <div class="tab" data-group="primary" data-tab="description">
            {{editor data.system.description target="system.description" button=true owner=owner editable=editable}}
        </div>

        {{!-- Attributes Tab --}}
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            <div class="form-group">
                <label>{{localize "CTHACK.AbilityKey"}}</label>
                <div class="form-fields">
                    <input class="field-value input-key" name="system.key" type="text" value="{{data.system.key}}" data-dtype="String" {{isAbilityKeyReadOnly data.system.key}}>
                </div>
            </div>
            <div class="form-group">
                <label for="system.uses.per">{{localize "CTHACK.AbilityUsePer"}}</label>
                <select name="system.uses.per" data-type="String">
                    {{#select data.system.uses.per}}
                        <option value="Permanent">{{localize "CTHACK.AbilityUsePermanent"}}</option>
                        <option value="Session">{{localize "CTHACK.AbilityUsePerSession"}}</option>
                        <option value="Hour">{{localize "CTHACK.AbilityUsePerHour"}}</option>
                        <option value="Scene">{{localize "CTHACK.AbilityUsePerScene"}}</option>
                        <option value="Fight">{{localize "CTHACK.AbilityUsePerFight"}}</option>>
                    {{/select}}
                </select>
            </div>
            <div class="form-group">
                <label>{{localize "CTHACK.AbilityUseValueDtl"}}</label>
                <div class="form-fields">
                    <input class="field-value" name="system.uses.value" type="text" value="{{data.system.uses.value}}" data-dtype="Number">
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "CTHACK.AbilityUseMax"}}</label>
                <div class="form-fields">
                    <input class="field-value" name="system.uses.max" type="text" value="{{data.system.uses.max}}" data-dtype="Number">
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "CTHACK.AbilityUseLast"}}</label>
                <div class="form-fields">
                    <input class="field-value" name="system.uses.last" type="text" value="{{data.system.uses.last}}" data-dtype="String">
                </div>
            </div>        
            <div class="form-group">
                <label>{{localize "CTHACK.AbilityMultiple"}}</label>
                <div class="form-fields ability-checkbox">
                    <input class="checkbox" name="system.multiple" type="checkbox" {{checked data.system.multiple}}>
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "CTHACK.AbilityIsCustom"}}</label>
                <div class="form-fields ability-checkbox">
                    <input class="checkbox" name="system.isCustom" type="checkbox" {{checked data.system.isCustom}}>
                </div>
            </div>        
            <div class="form-group">
                <label>{{localize "CTHACK.AbilityAdvantageGiven"}}</label>
                <div class="form-fields ability-checkbox">
                    <input class="checkbox" name="system.advantageGiven" type="checkbox" {{checked data.system.advantageGiven}}>
                </div>
            </div> 
             <div class="form-group">
                <label class="advantage">{{localize "CTHACK.AbilityAdvantageText"}}</label>
                <div class="form-fields ability-checkbox">
                    <input class="field-value" name="system.advantageText" type="text" value="{{data.system.advantageText}}" data-dtype="String">
                </div>
            </div>  
        </div>
    </section>
</form>
