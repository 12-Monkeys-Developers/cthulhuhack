<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="item-image" src="{{itemData.img}}" data-edit="img" title="{{itemData.name}}"/>
        <div class="header-fields">
            <h1 class="item-name"><input name="name" type="text" value="{{itemData.name}}" placeholder="Name"/></h1>
            <div class="grid grid-2col item-weapon">
              <div class="resource">
                <label class="resource-label select-wider">{{localize "CTHACK.Material"}}</label>
                <select name="data.dice" data-type="String" {{{getStyleForDice systemData.dice}}}>
                    {{#select systemData.dice}}
                        {{>Â "systems/cthack/templates/parts/dice-sides-options-value.hbs"}}
                    {{/select}}
                </select>
              </div>
              <div class="resource">
                <label class="resource-label select-wider">{{localize "CTHACK.ItemRangeName"}}</label>
                <select name="data.range" data-type="String" class="select-range">
                    {{#select systemData.range}}
                        <option value="">{{localize "CTHACK.None"}}</option>
                        <option value="near">{{localize "CTHACK.RangeNear"}}</option>
                        <option value="far">{{localize "CTHACK.RangeFar"}}</option>
                        <option value="distant">{{localize "CTHACK.RangeDistant"}}</option>
                        <option value="3str">{{localize "CTHACK.RangeThreeStr"}}</option>
                    {{/select}}
                </select>
              </div>
            </div>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        <div class="tab" data-group="primary" data-tab="description">
            {{editor content=systemData.description target="data.description" button=true owner=owner editable=editable}}
        </div>

    </section>
</form>
